{% extends 'base.html.twig' %}

{% block title %}Hello AdditionController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Table d'addition</h1>
        <div>
            <a class="waves-effect waves-light btn red" href="{{ path('addition', { 'xmin': xmin, 'xmax': xmax, 'ymin': ymin, 'ymax': ymax+1 }) }}">+ ligne</a> 
            <a class="waves-effect waves-light btn red" href="{{ path('addition', { 'xmin': xmin, 'xmax': xmax+1, 'ymin': ymin, 'ymax': ymax }) }}">+ colonne</a>
            <a class="waves-effect waves-light btn red" href="{{ path('addition', { 'xmin': xmin, 'xmax': xmax, 'ymin': ymin, 'ymax': ymax-1 }) }}">- ligne</a> 
            <a class="waves-effect waves-light btn red" href="{{ path('addition', { 'xmin': xmin, 'xmax': xmax-1, 'ymin': ymin, 'ymax': ymax }) }}">- colonne</a>
        </div>
        <br>
        <table class="striped">
            {# EntÃªte du tableau #}
            <tbody>
            {# Affiche des valeurs entre xmin et xmax #}
            <tr>
                <td></td>
                {% for i in xmin..xmax %}
                    <td><b>{{ i }}</b></td>
                {% endfor %}
            </tr>
            {# Affiche des valeurs entre ymin et ymax #}
            {% for i in ymin..ymax %}
                <tr>
                    <td><b>{{ i }}</b></td>
                    {# additionne y et x #}
                    {% for o in xmin..xmax %}
                        <td><b>{{ i+o }}</b></td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
