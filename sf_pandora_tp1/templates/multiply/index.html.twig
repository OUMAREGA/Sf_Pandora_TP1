{% extends 'base.html.twig' %}

{% block title %}Hello MultiplyController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Table de  multiplication</h1>
    <div>
        <a class="waves-effect waves-light btn red" href="{{ path('multiply', { 'xmin': xmin, 'xmax': xmax, 'ymin': ymin, 'ymax': ymax+1 }) }}">+ ligne</a>
        <a class="waves-effect waves-light btn red" href="{{ path('multiply', { 'xmin': xmin, 'xmax': xmax+1, 'ymin': ymin, 'ymax': ymax }) }}">+ colonne</a>
        <a class="waves-effect waves-light btn red" href="{{ path('multiply', { 'xmin': xmin, 'xmax': xmax, 'ymin': ymin, 'ymax': ymax-1 }) }}">- ligne</a>
        <a class="waves-effect waves-light btn red" href="{{ path('multiply', { 'xmin': xmin, 'xmax': xmax-1, 'ymin': ymin, 'ymax': ymax }) }}">- colonne</a>
    </div>
    <br>
    <table class="striped">
        <tbody>
        <tr>
            <td></td>
            {% for x in xmin..xmax %}
                <td><b>{{x}}</b></td>
            {% endfor %}
        </tr>
        {% for y in ymin..ymax %}
            <tr>
                <td>{{y}}</td>
                {% for x in xmin..xmax %}
                    <td><b>{{y*x}}</b></td>
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
