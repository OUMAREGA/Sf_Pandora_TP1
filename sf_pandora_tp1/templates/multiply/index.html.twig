{% extends 'base.html.twig' %}

{% block title %}Hello MultiplyController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Vos multiplications âœ…</h1>
    <table class="striped">
        <thead>
        <tr>
            <th colspan="2">Table de multiplication</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td></td>
            {% for x in xmin..xmax %}
                <td><b>{{x}}</b></td>
            {% endfor %}
        </tr>
        {% for y in ymin..ymax %}
            <tr>
                <td>{{y}}</td>
                {% for x in xmin..xmax %}
                    <td><b>{{y*x}}</b></td>
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
        </table>
    <div>
        <a href="{{ path('multiply', { 'xmin': xmin, 'xmax': xmax, 'ymin': ymin, 'ymax': ymax+1 }) }}">Ajouter une ligne</a> | <a href="{{ path('multiply', { 'xmin': xmin, 'xmax': xmax+1, 'ymin': ymin, 'ymax': ymax }) }}">Ajouter une colonne</a>
    </div>
    <div>
        <a href="{{ path('multiply', { 'xmin': xmin, 'xmax': xmax, 'ymin': ymin, 'ymax': ymax-1 }) }}">Supprimer une ligne</a> | <a href="{{ path('multiply', { 'xmin': xmin, 'xmax': xmax-1, 'ymin': ymin, 'ymax': ymax }) }}">Supprimer une colonne</a>
    </div>
</div>
{% endblock %}
